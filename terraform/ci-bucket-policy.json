{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "publicaccess",
      "Effect": "Allow",
      "Principal": "*",
      "Action": "s3:GetObject",
      "Resource": "arn:aws:s3:::${bucket_name}/*"
    },
    {
      "Sid": "putfiles",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:PutObjectAcl"
      ],
      "Resource": "arn:aws:s3:::${bucket_name}/*"
    }
  ]
}